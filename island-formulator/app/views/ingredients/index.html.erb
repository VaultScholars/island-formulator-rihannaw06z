<% content_for :title, "Ingredients" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center space-y-5">
    <h1 class="font-bold text-4xl text-white">ğŸ…˜ğŸ…ğŸ…–ğŸ…¡ğŸ…”ğŸ…“ğŸ…˜ğŸ…”ğŸ…ğŸ…£ğŸ…¢</h1>
    <%= link_to "New ingredient", new_ingredient_path, class: "rounded-full px-3.5 py-2.5 bg-[#FFA500] hover:bg-[#FFCB5C] text-white block font-medium" %>
  </div>

  <div id="ingredients" class="space-y-6">
    <% if @ingredients.any? %>
      <% @ingredients.each do |ingredient| %>
        <div class="p-6 bg-burgundy/70 backdrop-blur-md border border-white/30 rounded-xl shadow-lg flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0 opacity-90 text-white">
          <div class="w-full">
          <%= render ingredient %>
          </div>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", ingredient, class: "w-full sm:w-auto text-center rounded-full px-3.5 py-2.5 bg-[#4B543B] hover:bg-gray-500 inline-block font-medium" %>
            <%= link_to "Edit", edit_ingredient_path(ingredient), class: "w-full sm:w-auto text-center rounded-full px-3.5 py-2.5 bg-gray-700 hover:bg-gray-500 inline-block font-medium" %>
            <%= button_to "Delete", ingredient, method: :delete, class: "w-full sm:w-auto rounded-full px-3.5 py-2.5 text-red-900 bg-[#F2BBD2] hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No ingredients found.</p>
    <% end %>
  </div>
</div>


