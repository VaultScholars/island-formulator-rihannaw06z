<%= form_with model: ingredient, html: { multipart: true }, local: true do |form| %>
  <% if ingredient.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

      <ul class="list-disc ml-6">
        <% ingredient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 text-white">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ingredient.errors[:name].none?, "border-red-400 focus:outline-red-600": ingredient.errors[:name].any?}] %>
  </div>

  <div class="my-5 text-white">
    <%= form.label :category %>
    <%= form.text_field :category, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ingredient.errors[:category].none?, "border-red-400 focus:outline-red-600": ingredient.errors[:category].any?}] %>
  </div>

<div class="bg-purple-200 shadow p-6 rounded-lg">
  <%= form.label :photo, "Ingredient Photo", class: "block font-bold text-gray-700 mb-2" %>

  <div class="flex items-center justify-center w-full">
    <label for="ingredient_photo" class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-purple-100 hover:bg-gray-100">
      <div class="flex flex-col items-center justify-center pt-5 pb-6">
        <svg class="w-8 h-8 mb-4 text-gray-500" ...></svg>
        <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
        <p class="text-xs text-gray-500">PNG, JPG or GIF</p>
      </div>
    </label>

    <%= form.file_field :photo,
        accept: "image/*",
        id: "ingredient_photo",
        class: "hidden" %>
  </div>

  <% if ingredient.photo.attached? %>
    <p class="mt-2 text-sm text-green-600">âœ“ Current photo: <%= ingredient.photo.filename %></p>
  <% end %>
</div>


  <div class="my-5 text-white">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ingredient.errors[:description].none?, "border-red-400 focus:outline-red-600": ingredient.errors[:description].any?}] %>
  </div>

  <div class="my-5 text-white">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ingredient.errors[:notes].none?, "border-red-400 focus:outline-red-600": ingredient.errors[:notes].any?}] %>
  </div>
  <div class="mb-4">
    <%= form.label :tag_ids, "Benefits & Properties", class: "block font-bold mb-2 text-white" %>
    <div class="grid grid-cols-2 gap-2">
      <%# collection_check_boxes is a powerful Rails helper that generates all the checkboxes for us! %>
      <%# It takes 4 main arguments: 
          1. The field name (:tag_ids)
          2. The collection to loop through (Tag.all)
          3. The value to save (:id)
          4. The text to show the user (:name)
      %>
      <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb| %>
        <div class="flex items-center">
          <%= cb.check_box class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= cb.label class: "px-3 ml-2 text-sm text-white" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "absolute w-full sm:w-auto rounded-md bottom-12 left-23 px-3.5 py-2.5 bg-[#9102DE] hover:bg-[#A90DFD] text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
