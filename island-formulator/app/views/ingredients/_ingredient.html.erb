<div id="<%= dom_id ingredient %>" class="w-full sm:w-auto my-5 space-y-3">
  <div>
    <strong class="block font-medium mb-1">洧디洧딡洧딬洧:</strong>
    <%= ingredient.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">洧딌洧딡洧때洧쓇롕엃롕쩛롕洧땑:</strong>
    <%= ingredient.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1">洧딍洧쓇롖洧딣洧洧딨洧딯洧때洧딨洧딮洧딭:</strong>
    <%= ingredient.description %>
      <p class="mt-4">
      <strong>Tags:</strong>
        <% if ingredient.tags.any? %>
          <div class="flex flex-wrap gap-2 mt-1">
            <% ingredient.tags.each do |tag| %>
              <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-full border border-blue-400 px-3">
                <%= tag.name %>
              </span>
            <% end %>
          </div>
        <% else %>
          <span class="text-gray-500 italic">No tags selected</span>
        <% end %>
      </p>
  </div>
  <div>
    <strong class="block font-medium mb-1">洧디洧딮洧때洧쓇롖:</strong>
    <%= ingredient.notes %>
  </div>
</div>
