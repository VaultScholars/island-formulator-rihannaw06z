<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block mb-5" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="text-5xl font-extrabold text-gray-900 px-4 mt-4">ğŸ…˜ğŸ…ğŸ…¥ğŸ…”ğŸ…ğŸ…£ğŸ…ğŸ…¡ğŸ…¨</h1>
    <%= link_to "New Inventory Item", new_inventory_item_path, class: "rounded-lg py-3 px-5 mt-4 mr-4 bg-[#1F4684] text-white block font-medium" %>
  </div>

  <div id="inventory_items" class="min-w-full mt-8">
    <div class="overflow-x-auto shadow rounded-lg">
      <table class="min-w-full bg-gray-900/20 rounded-lg">
        <thead class="bg-gray-900 border-b font-extrabold text-2xl">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Ingredient</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Brand</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Size</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Location</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Purchased</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-900">
          <% @inventory_items.each do |item| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium text-white"><%= item.ingredient.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-blue-100"><%= item.brand %></td>
              <td class="px-6 py-4 whitespace-nowrap text-blue-100"><%= item.size %></td>
              <td class="px-6 py-4 whitespace-nowrap text-blue-100"><%= item.location %></td>
              <td class="px-6 py-4 whitespace-nowrap text-blue-100"><%= item.purchase_date.strftime("%b %d, %Y") %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Show", item, class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to "Edit", edit_inventory_item_path(item), class: "text-gray-100 hover:text-gray-300" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>