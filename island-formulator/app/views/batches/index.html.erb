<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block mb-5" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mt-10 mb-6">
    <h1 class="text-5xl font-bold text-gray-900">ğŸ…‘ğŸ…ğŸ…£ğŸ…’ğŸ…— ğŸ…—ğŸ…˜ğŸ…¢ğŸ…£ğŸ…ğŸ…¡ğŸ…¨</h1>
    <%= link_to "Log New Batch", new_batch_path, 
    class: "bg-green-900 hover:bg-green-400 text-white font-bold py-3 px-6 mr-2 rounded-lg shadow-md transition duration-200" %>
  </div>

  <div id="batches" class="min-w-full mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @batches.each do |batch| %>
      <div class="bg-black/40 shadow rounded-lg p-6 border-l-4 border-green-500">
        <div class="flex justify-between items-start">
          <div>
            <h2 class="font-bold text-xl text-green-200"><%= batch.recipe.title %></h2>
            <p class="text-sm text-gray-400"><%= batch.made_on.strftime("%B %d, %Y") %></p>
          </div>
          <%= link_to "View Details", batch, class: "text-sm text-blue-100 hover:underline" %>
        </div>
        
        <% if batch.notes.present? %>
          <div class="mt-4 text-gray-100 italic text-sm">
            "<%= batch.notes.truncate(100) %>"
          </div>
        <% end %>
      </div>
    <% end %>
    
    <% if @batches.empty? %>
      <p class="text-gray-100">No batches logged yet. Go make something!</p>
    <% end %>
  </div>
</div>