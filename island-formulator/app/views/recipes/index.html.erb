<% content_for :title, "Recipes" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="text-5xl font-extrabold text-gray-900 py-6 px-4 mt-4">ğŸ…œğŸ…¨ ğŸ…¡ğŸ…”ğŸ…’ğŸ…˜ğŸ…ŸğŸ…”ğŸ…¢</h1>
    <%= link_to "New recipe", new_recipe_path, 
      class: "absolute rounded-md px-4 py-2.5 top-30 right-15 bg-green-600 hover:bg-green-500 text-white block font-medium" %>
  </div>

  <div id="recipes" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <div class="bg-white shadow-lg rounded-xl p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
          <%= render recipe %>
          <h2 class="text-xl font-bold text-gray-800"><%= recipe.title %></h2>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", recipe, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_recipe_path(recipe), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", recipe, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No recipes found.</p>
    <% end %>
  </div>
</div>
